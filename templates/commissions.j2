                  <label for="requestStatus">Request Status:</label>
                  <select name="requestStatus" id="requestStatus" required>
                      <option value="0">Request Unclaimed</option>
                      <option value="1">Request Claimed</option>
                      <option value="2">Request Complete</option>
                      <option value="3">Request Cancelled</option>
                  </select>

                  <label for="dateRequested">Date Requested:</label>
                  <input type="datetime-local" id="dateRequested" name="dateRequested" required>

                  <label for="dateCompleted">Date Completed:</label>
